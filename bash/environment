# ------------------------------------------------------------------------------
# JAVA
# ------------------------------------------------------------------------------

# Java (system specific).
if [[ "$OSTYPE" =~ ^darwin ]]; then
  export JAVA_HOME="$(/usr/libexec/java_home --version 11)"
else
  export JAVA_HOME="$(realpath /usr/bin/java | sed 's:/jre/bin/java$::')"
fi
export JAVA_TOOL_OPTIONS="-Dfile.encoding=UTF-8"

# Gradle.
export GRADLE_HOME="$(realpath $(which gradle) | sed 's:/bin/gradle$::')"

# ------------------------------------------------------------------------------
# LLVM
# ------------------------------------------------------------------------------

export LLVM_HOME="$(brew --prefix)/opt/llvm"

# ------------------------------------------------------------------------------
# ANDROID
# ------------------------------------------------------------------------------

export ANDROID_HOME="$HOME/Library/Android/sdk"

# ------------------------------------------------------------------------------
# HASKELL
# ------------------------------------------------------------------------------

export GHCUP_HOME="$HOME/.ghcup"

# ------------------------------------------------------------------------------
# NODE
# ------------------------------------------------------------------------------

export NVM_HOME="$HOME/.nvm"

# ------------------------------------------------------------------------------
# PYTHON
# ------------------------------------------------------------------------------

export PYENV_ROOT="$HOME/.pyenv"

# ------------------------------------------------------------------------------
# RUBY
# ------------------------------------------------------------------------------

export RBENV_HOME="$HOME/.rbenv"

# ------------------------------------------------------------------------------
# RUST
# ------------------------------------------------------------------------------

export CARGO_HOME="$HOME/.cargo"

# ------------------------------------------------------------------------------
# PATH
# ------------------------------------------------------------------------------

export PATH="$LLVM_HOME/bin:$ANDROID_HOME/emulator:$ANDROID_HOME/tools:$ANDROID_HOME/tools/bin:$ANDROID_HOME/platform-tools:$GRADLE_HOME/bin:$JAVA_HOME/bin:$GHCUP_HOME/bin:$NVM_HOME/bin:$PYENV_ROOT/bin:$RBENV_HOME/bin:$CARGO_HOME/bin:$HOME/.local/bin:$PATH"
